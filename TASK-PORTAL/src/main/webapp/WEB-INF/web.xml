<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>TASK-PORTAL</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>SigninValidation</servlet-name>
		<servlet-class>com.task.SigninValidation</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SigninValidation</servlet-name>
		<url-pattern>/SigninValidation</url-pattern>
	</servlet-mapping>

	<servlet>
	  	<servlet-name>GetUsers</servlet-name>
	 	 <servlet-class>com.task.GetUsers</servlet-class>
	</servlet>
	<servlet-mapping>
	 	 <servlet-name>GetUsers</servlet-name>
	 	 <url-pattern>/GetUsers</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  	<servlet-name>RegisterUser</servlet-name>
	 	 <servlet-class>com.task.RegisterUser</servlet-class>
	</servlet>
	<servlet-mapping>
	 	 <servlet-name>RegisterUser</servlet-name>
	 	 <url-pattern>/RegisterUser</url-pattern>
	</servlet-mapping>

</web-app>